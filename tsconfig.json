{
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": ".",
        "module": "commonjs",
        "target": "ES6",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "declaration": false,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "removeComments": true,
        "suppressImplicitAnyIndexErrors": true,
        "preserveConstEnums": true,
        "typeRoots": [
            "./node_modules/@types/"
        ],
        "lib": [
            "dom",
            "es2015",
            "es2016",
            "es2017"
        ]
    },
    "compileOnSave": false,
    "buildOnSave": false,
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ],
    "types": [
        "core-js"
    ]
}